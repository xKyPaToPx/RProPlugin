<Window x:Class="RProPlugin.EditPricesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RProPlugin"
        mc:Ignorable="d"
        Title="EditPricesWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель добавления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <TextBox x:Name="NewNameTextBox" 
                     Width="200" 
                     Margin="0,0,5,0" 
                     Text="{x:Null}" 
                     GotFocus="NewNameTextBox_GotFocus" 
                     LostFocus="NewNameTextBox_LostFocus">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Foreground" Value="Gray"/>
                        <Setter Property="Text" Value="Введите имя"/>
                        <Style.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Text" Value="{x:Null}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <TextBox x:Name="NewPriceTextBox" 
                     Width="100" 
                     Margin="0,0,5,0" 
                     Text="0.00"/>
            <Button Content="Добавить" Click="AddPrice_Click" Width="100"/>
        </StackPanel>

        <!-- Таблица для редактирования -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Prices}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" 
                                  Binding="{Binding Name}" 
                                  Width="*" 
                                  IsReadOnly="True"/>
                <DataGridTextColumn Header="Цена" 
                                  Binding="{Binding Price, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                  Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Сохранить" Click="Save_Click" Width="100" Margin="0,0,5,0"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
